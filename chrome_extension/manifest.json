{ 	
	"manifest_version": 2, 
	"name": "Zamamotu", 
	"description": "Basic service to track man's activity on a webpage", 
	"version": "0.2.4" ,
	"content_scripts": [
	  {
	   	"matches": [
	   	  "<all_urls>"
	   	], 
	    "js": ["content.js"]
	  }
	],
	"permissions": [
	  "tabs","alarms","history","storage"
	],
	"browser_action": {
	  "default_icon": "1f408.png",
	  "default_popup": "popup.html",
	  "default_title": "Zamamotu"
	},
	"background": {
		"scripts":["background.js"]
	},
	"author" : "Turkov Matvey"
}